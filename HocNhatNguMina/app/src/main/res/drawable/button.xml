<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#c1897777"/>
        </shape>
    </item>
    <item>
        <shape  android:shape="rectangle" >
            <corners
                android:radius="0dp"
                />
            <gradient
                android:angle="45"
                android:startColor="#ff438dd1"
                android:endColor="#ff2777c1"
                android:type="linear"
                />
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp"
                />
            <stroke
                android:width="1dp"
                android:color="#ff453838"
                />
        </shape>
    </item>

</selector>